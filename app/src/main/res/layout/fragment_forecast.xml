<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_blue"
    tools:context=".fragments.ForecastFragment">

    <!-- Título del fragmento -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pronósticos del Clima"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ubicación seleccionada (solo visible cuando viene desde LocationsFragment) -->
    <TextView
        android:id="@+id/tvSelectedLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ubicación seleccionada"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:background="@drawable/selected_location_background"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo ID de ubicación -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLocationId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID de Ubicación"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tilDays"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLocationId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo días de pronóstico -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDays"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Días (1-14)"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tilLocationId"
        app:layout_constraintStart_toEndOf="@id/tilLocationId"
        app:layout_constraintEnd_toStartOf="@id/btnSearch"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón de búsqueda -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Buscar"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tilLocationId"
        app:layout_constraintBottom_toBottomOf="@id/tilLocationId"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView para mostrar los pronósticos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvForecast"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_forecast"
        app:layout_constraintTop_toBottomOf="@id/tilLocationId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ProgressBar para carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvForecast"
        app:layout_constraintBottom_toBottomOf="@id/rvForecast"
        app:layout_constraintStart_toStartOf="@id/rvForecast"
        app:layout_constraintEnd_toEndOf="@id/rvForecast" />

    <!-- TextView para mensaje cuando no hay resultados -->
    <TextView
        android:id="@+id/tvNoResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca pronósticos para una ubicación."
        android:textSize="16sp"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvForecast"
        app:layout_constraintBottom_toBottomOf="@id/rvForecast"
        app:layout_constraintStart_toStartOf="@id/rvForecast"
        app:layout_constraintEnd_toEndOf="@id/rvForecast" />

</androidx.constraintlayout.widget.ConstraintLayout>
