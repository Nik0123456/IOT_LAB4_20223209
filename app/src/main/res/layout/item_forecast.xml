<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2024-10-02"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvMaxMinTemp" />

        <!-- Temperatura máxima y mínima -->
        <TextView
            android:id="@+id/tvMaxMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25°C / 18°C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Icono del clima -->
        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_sunny"
            android:contentDescription="Icono del clima"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Condición del clima -->
        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Parcialmente nublado"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/ivWeatherIcon"
            app:layout_constraintStart_toEndOf="@id/ivWeatherIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Humedad -->
        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Humedad: 65%"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvCondition"
            app:layout_constraintStart_toEndOf="@id/ivWeatherIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Viento -->
        <TextView
            android:id="@+id/tvWind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Viento: 12 km/h NE"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvHumidity"
            app:layout_constraintStart_toEndOf="@id/ivWeatherIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Probabilidad de lluvia -->
        <TextView
            android:id="@+id/tvRainChance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lluvia: 10%"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivWeatherIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvUvIndex" />

        <!-- Índice UV -->
        <TextView
            android:id="@+id/tvUvIndex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="UV: 6"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/ivWeatherIcon"
            app:layout_constraintStart_toEndOf="@id/tvRainChance"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
