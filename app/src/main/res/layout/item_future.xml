<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23째C"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue" />

    <ImageView
        android:id="@+id/ivWeatherIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_sunny"
        android:contentDescription="Icono del clima" />

    <TextView
        android:id="@+id/tvCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soleado"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvFeelsLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensaci처n: 25째C"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humedad: 60%"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvWindSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viento: 15 km/h"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvRainChance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lluvia: 5%"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presi처n: 1013 mb"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvVisibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Visibilidad: 10 km"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
