<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título de la aplicación -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TELE-WEATHER"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguimiento y Predicción del Clima Mundial"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:alpha="0.9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Primera imagen relacionada al clima -->
    <ImageView
        android:id="@+id/ivWeatherIcon1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_weather_sun"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivWeatherIcon2" />

    <!-- Segunda imagen relacionada al clima -->
    <ImageView
        android:id="@+id/ivWeatherIcon2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_weather_cloud"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toEndOf="@id/ivWeatherIcon1"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Ingresar -->
    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="INGRESAR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/button_color"
        android:textColor="@android:color/white"
        android:layout_marginTop="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/ivWeatherIcon1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto de autor -->
    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elaborado por: /Tony Flores/20223209"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>